<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFoto"
            app:cardCornerRadius="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/ivFotoMenu"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            android:text="Kebab"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/cvFoto"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRp"
            android:text="Rp. "
            android:textSize="16dp"
            android:textColor="@color/biru_tua"
            android:layout_below="@id/tvName"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cvFoto"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPrice"
            android:text="16000"
            android:textSize="16dp"
            android:textColor="@color/biru_tua"
            android:layout_below="@id/tvName"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tvRp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnRemove"
            android:src="@drawable/ic_remove"
            android:layout_toRightOf="@id/cvFoto"
            android:layout_marginLeft="8dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/tvQty"
            android:text="0"
            android:textSize="15dp"
            android:textColor="@color/biru_tua"
            android:layout_toRightOf="@id/btnRemove"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnAdd"
            android:src="@drawable/ic_add"
            android:layout_toRightOf="@id/tvQty"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/tvRate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="4.4"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_rate"
            android:layout_toLeftOf="@id/tvRate"
            android:layout_marginRight="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/btnTrolly"
            android:src="@drawable/ic_trolly"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/biru_muda"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

</LinearLayout>